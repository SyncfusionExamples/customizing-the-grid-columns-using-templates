@page "/"
@inject Microsoft.AspNetCore.Components.NavigationManager UriHelper
@using Syncfusion.Blazor.Buttons;

<style>
    @@font-face {
        font-family: 'empicon';
        src: url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    .e-grid .e-icon-userlogin::before {
        font-family: 'empicon';
        width: 15px !important;
        content: '\e702';
        padding-right: 12px;
    }

    .image img {
        height: 50px;
        width: 50px;
        border-radius: 50px;
        box-shadow: inset 0 0 1px #e0e0e0, inset 0 0 14px rgba(0, 0, 0, 0.2);
    }
        
</style>

<SfGrid DataSource="@Employees">
    <GridColumns>
        <GridColumn HeaderText="Employee Image"
                    TextAlign="TextAlign.Center">
            <Template>
                @{ 
                    var EmployeeInfo = (context as Employee);
                    <div class="image">
                        <img src="@UriHelper.ToAbsoluteUri($"images/{EmployeeInfo.EmployeeID}.png")" />
                    </div>
                }
            </Template>
        </GridColumn>
        <GridColumn Field="EmployeeID"
                    TextAlign="TextAlign.Right"
                    Width="110">
            <HeaderTemplate>
                <span class="e-icon-userlogin e-headercell">Emp ID</span>
            </HeaderTemplate>
        </GridColumn>
        <GridColumn Field="FirstName"
                    HeaderText="First Name"
                    Width="120">
        </GridColumn>
        <GridColumn Field="Title"
                    HeaderText="Title"
                    Width="120">
        </GridColumn>
        <GridColumn Field="HireDate"
                    HeaderText="HireDate"
                    Format="d"
                    TextAlign="TextAlign.Right"
                    Width="160">
        </GridColumn>
        <GridColumn Field="Country"
                    HeaderText="Country"
                    Width="100">
        </GridColumn>
        <GridColumn HeaderText="Employee Status"
                    TextAlign="TextAlign.Center">
            <Template>
                @{ 
                    var EmployeeStatus = (context as Employee);
                    <SfCheckBox Checked="EmployeeStatus.Discontinued"></SfCheckBox>
                }
            </Template>
        </GridColumn>
    </GridColumns>
</SfGrid>

@code{
    public List<Employee> Employees { get; set; }
    protected override void OnInitialized()
    {
        Employees = Employee.GetAllRecords();
    }
}